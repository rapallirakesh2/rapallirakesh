#! /bin/bash
echo -e "enter the name of the file : \c"
read file_name

if [ -w $file_name ]
then
   echo "type some text data. to quit press ctrld+d."
   cat >> $file_name 
else
   echo "the file do not have to write premission"
fi
  echo "$file_name not exists" 
  fi
	
	
	
