in vc now 
#! /bin/bash
# for loops

select name in mark john tom ben
do 
   case $name in 
   mark)
      echo mark selected
   ;;
   john)
      echo john selected 
   ;;
   tom)
      echo tom selected
    ;;
    ben)
       echo ben selected
   ;; 
   *)
     echo "erroe please provide the no. between 1..4"
     esac          
 done 
 ctrl+s 
 
 
 in terminal now
 rake@rake-VirtualBox:~/Desktop$ ./hello.sh
1) mark
2) john
3) tom
4) ben
#? 4
ben selected
#? 1
mark selected
#? 2
john selected
#? 3
tom selected
#? 
